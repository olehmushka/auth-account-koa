{
  "name": "finance-management-service-auth-account-koa",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "build": "yarn clean && yarn lint && yarn build:ts",
    "clean": "rimraf dist",
    "build:ts": "echo Using TypeScript && tsc --version && tsc --pretty",
    "start": "yarn build && yarn serve",
    "serve": "node ./dist/main.js",
    "start:dev": "yarn build && yarn serve:dev",
    "serve:dev": "nodemon --inspect ./dist/main.js",
    "start:prod": "yarn lint && yarn build && yarn serve:pm2-runtime",
    "serve:pm2-runtime": "pm2-runtime start pm2.yml",
    "serve:pm2": "pm2 start pm2.yml",
    "stop": "pm2 stop all",
    "watch": "yarn build -- --watch"
  },
  "author": "Oleh Mushka<olegamysk@gmail.com>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.3",
    "express-winston": "^4.0.3",
    "http-errors": "^1.6.3",
    "inversify": "^4.13.0",
    "inversify-express-utils": "^6.0.0",
    "jsonwebtoken": "^9.0.0",
    "pm2": "^3.0.2",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "ts-node": "^6.0.4",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.8.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.11.0",
    "@types/express-winston": "^4.0.0",
    "@types/http-errors": "^1.6.1",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/node": "^9.3.0",
    "@types/winston": "^2.4.4",
    "nodemon": "^1.17.5"
  }
}

{
  "defaultSeverity": "error",
  "extends": [
    "tslint-config-airbnb"
  ],
  "jsRules": {},
  "rules": {
    "arrow-return-shorthand": true,
    "class-name": true,
    "curly": true,
    "deprecation": {
      "severity": "warn"
    },
    "eofline": true,
    "import-name": {
      "severity": "off"
    },
    "indent": [true, "spaces", 2],
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "^import [^,]+ from |^export | implements"
      }
    ],
    "no-eval": true,
    "no-magic-numbers": [true, -1, 0, 1, 2],
    "no-shadowed-variable": true,
    "prefer-array-literal": {
      "severity": "off"
    },
    "prefer-const": true,
    "quotemark": [true, "single"],
    "semicolon": [true, "always"],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "triple-equals": [true, "allow-null-check"],
    "variable-name": {
      "options": [
        "allow-leading-underscore",
        "allow-pascal-case"
      ]
    }
  },
  "rulesDirectory": []
}